#include <16F887.h>
#FUSES NOWDT, PUT, HS, NOPROTECT, NOLVP
#USE DELAY(CLOCK=20M)
const unsigned int8 Anode[10]={0xC0, 0xF9, 0xA4, 0xB0, 0x99, 0x92, 0x82, 0xF8, 0x80, 0x90};
unsigned int8 i,x=0x00, y=0x00;
void up()
{
    for (i=0;i<24;i++)
   {
    x=Anode[i%10];
    y=Anode[i/10];
    output_c(y);
    output_d(x);
    delay_ms(100);
   }
}
void down()
{
    for (i=23;((i>0)||(i=0));i++)
   {
    x=Anode[i%10];
    y=Anode[i/10];
    output_c(y);
    output_d(x);
    delay_ms(100);
   }
}
void main()
{
   set_tris_c(0x00);
   set_tris_d(0x00);
   set_tris_e(0x03);
   if(!input(pin_e0))
         {
         up();
         }
   if(!input(pin_e1))
         {
         down();
         }
}
